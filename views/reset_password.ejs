<link rel="stylesheet" href="/css/reset_password.css">
<div id="reset-password-container">
    <img id="reset-password-img" src="/images/undraw_authentication_fsn5 (1).svg" alt="Reset Password image">
    <div id="right-container">
        <h3>Reset Password</h3>
        <form action="/users/reset-password" class="new-comment-form" method="POST">

            <div class="md-form">
                <input type="password" name="password" placeholder="Password" class="form-control" required>
            </div>
            <div class="md-form">
                <input type="password" name="confirm_password" placeholder="Confirm Password" class="form-control"
                required>
            </div>
            <% if(locals.user){%>
                <div class="md-form">
                    <input type="hidden" name="userID" value = "<%= locals.user.id%>">
                </div>
            <%}else{%> 
                <div class="md-form">
                    <input type="hidden" name="userID" value = "<%= userID%>">
                </div>
                <div class="md-form">
                    <input type="hidden" name="tokenID" value = "<%= tokenID%>">
                </div>
            <%}%>
            <input type="submit" value = "Reset Password" class="btn btn-info btn-block my-4">
        </form>
    </div>
</div>

